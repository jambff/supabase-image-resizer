{
  "include": ["src/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false
  },
  "ts-node": {
    "files": true
  }
}
